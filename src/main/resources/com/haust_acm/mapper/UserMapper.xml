<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haust_acm.mapper.UserMapper">
	<!--实体映射-->
	<resultMap id="base_result_map" type="com.haust_acm.entity.po.User">
		<!--用户id-->
		<id property="userId" column="user_id"/>
		<!--用户名-->
		<result property="userName" column="user_name"/>
		<!--用户邮箱-->
		<result property="email" column="email"/>
		<!--用户密码-->
		<result property="password" column="password"/>
		<!--用户状态 0:为正常，1为封禁，3为删除-->
		<result property="status" column="status"/>
		<!--用户创建时间-->
		<result property="createTime" column="create_time"/>
		<!--用户最后一次登录时间-->
		<result property="lastLogin" column="last_login"/>
		<!--角色id-->
		<result property="roleId" column="role_id"/>
	</resultMap>

	<!--通用查询结果列-->
	<sql id="base_column_list">
		user_id,user_name,email,password,status,create_time,last_login,role_id
	</sql>

	<!--基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.userId != null">
			and user_id = #{query.userId}
		</if>
		<if test="query.userName != null and query.userName != ''">
			and user_name = #{query.userName}
		</if>
		<if test="query.email != null and query.email != ''">
			and email = #{query.email}
		</if>
		<if test="query.password != null and query.password != ''">
			and password = #{query.password}
		</if>
		<if test="query.status != null">
			and status = #{query.status}
		</if>
		<if test="query.createTime != null">
			and create_time = #{query.createTime}
		</if>
		<if test="query.lastLogin != null">
			and last_login = #{query.lastLogin}
		</if>
		<if test="query.roleId != null">
			and role_id = #{query.roleId}
		</if>
	</sql>

	<!--扩展的查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.userNameFuzzy != null and query.userNameFuzzy != ''">
			and user_name like concat('%',#{query.userNameFuzzy},'%')
		</if>
		<if test="query.emailFuzzy != null and query.emailFuzzy != ''">
			and email like concat('%',#{query.emailFuzzy},'%')
		</if>
		<if test="query.passwordFuzzy != null and query.passwordFuzzy != ''">
			and password like concat('%',#{query.passwordFuzzy},'%')
		</if>
		<if test="query.createTimeStart != null and query.createTimeStart != ''">
			<![CDATA[ and create_time >= str_to_date(#{query.createTimeStart},'%Y-%m-%d')]]>
		</if>
		<if test="query.createTimeEnd != null and query.createTimeEnd != ''">
			<![CDATA[ and create_time < date_sub(str_to_date(#{query.createTimeEnd},'%Y-%m-%d'), interval -1 day)]]>
		</if>
		<if test="query.lastLoginStart != null and query.lastLoginStart != ''">
			<![CDATA[ and last_login >= str_to_date(#{query.lastLoginStart},'%Y-%m-%d')]]>
		</if>
		<if test="query.lastLoginEnd != null and query.lastLoginEnd != ''">
			<![CDATA[ and last_login < date_sub(str_to_date(#{query.lastLoginEnd},'%Y-%m-%d'), interval -1 day)]]>
		</if>
	</sql>

	<!--通用查询条件-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!--查询列表-->
	<select id = "selectList" resultMap = "base_result_map">
		SELECT <include refid = "base_column_list"/> FROM user <include refid = "query_condition"/>
		<if test="query.orderBy != null"> ORDER BY #{query.orderBy} </if>
		<if test="query.simplePage != null"> LIMIT #{query.simplePage.start},#{query.simplePage.end} </if>
	</select>

	<!--查询数量-->
	<select id = "selectCount" resultType = "java.lang.Long">
		SELECT COUNT(1) FROM user <include refid = "query_condition"/>
	</select>

	<!--插入(匹配有值的字段)-->
	<insert id = "insert" parameterType = "com.haust_acm.entity.po.User">
		<selectKey keyProperty = "bean.userId" resultType="Long" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test= "bean.userId != null">
				user_id, 
			</if>
			<if test= "bean.userName != null and bean.userName != ''">
				user_name, 
			</if>
			<if test= "bean.email != null and bean.email != ''">
				email,
			</if>
			<if test= "bean.password != null and bean.password != ''">
				password, 
			</if>
			<if test= "bean.status != null">
				status, 
			</if>
			<if test= "bean.createTime != null">
				create_time, 
			</if>
			<if test= "bean.lastLogin != null">
				last_login, 
			</if>
			<if test= "bean.roleId != null">
				role_id, 
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test= "bean.userId != null">
				#{bean.userId}, 
			</if>
			<if test= "bean.userName != null and bean.userName != ''">
				#{bean.userName}, 
			</if>
			<if test= "bean.email != null and bean.email != ''">
				#{bean.email},
			</if>
			<if test= "bean.password != null and bean.password != ''">
				#{bean.password}, 
			</if>
			<if test= "bean.status != null">
				#{bean.status}, 
			</if>
			<if test= "bean.createTime != null">
				#{bean.createTime}, 
			</if>
			<if test= "bean.lastLogin != null">
				#{bean.lastLogin}, 
			</if>
			<if test= "bean.roleId != null">
				#{bean.roleId}, 
			</if>
		</trim>
	</insert>

	<!--插入或者更新(匹配有值的字段)-->
	<insert id = "insertOrUpdate" parameterType = "com.haust_acm.entity.po.User">
		INSERT INTO user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test= "bean.userId != null">
				user_id, 
			</if>
			<if test= "bean.userName != null and bean.userName != ''">
				user_name, 
			</if>
			<if test= "bean.email != null and bean.email != ''">
				email,
			</if>
			<if test= "bean.password != null and bean.password != ''">
				password, 
			</if>
			<if test= "bean.status != null">
				status, 
			</if>
			<if test= "bean.createTime != null">
				create_time, 
			</if>
			<if test= "bean.lastLogin != null">
				last_login, 
			</if>
			<if test= "bean.roleId != null">
				role_id, 
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test= "bean.userId != null">
				#{bean.userId}, 
			</if>
			<if test= "bean.userName != null and bean.userName != ''">
				#{bean.userName}, 
			</if>
			<if test= "bean.email != null and bean.email != ''">
				#{bean.email},
			</if>
			<if test= "bean.password != null and bean.password != ''">
				#{bean.password}, 
			</if>
			<if test= "bean.status != null">
				#{bean.status}, 
			</if>
			<if test= "bean.createTime != null">
				#{bean.createTime}, 
			</if>
			<if test= "bean.lastLogin != null">
				#{bean.lastLogin}, 
			</if>
			<if test= "bean.roleId != null">
				#{bean.roleId}, 
			</if>
		</trim>
		ON DUPLICATE KEY UPDATE
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.userName != null and bean.userName != ''">
				user_name = VALUES(user_name), 
			</if>
			<if test="bean.email != null and bean.email != ''">
				email = VALUES(email),
			</if>
			<if test="bean.password != null and bean.password != ''">
				password = VALUES(password), 
			</if>
			<if test="bean.status != null">
				status = VALUES(status), 
			</if>
			<if test="bean.createTime != null">
				create_time = VALUES(create_time), 
			</if>
			<if test="bean.lastLogin != null">
				last_login = VALUES(last_login), 
			</if>
			<if test="bean.roleId != null">
				role_id = VALUES(role_id), 
			</if>
		</trim>
	</insert>

	<!--添加(批量擦插入)-->
	<insert id="insertBatch" parameterType="com.haust_acm.entity.po.User" useGeneratedKeys="true" keyProperty="user_id">
		INSERT INTO user (user_name,email,password,status,role_id) VALUES
		<foreach collection="list" item="item" separator=",">
			(#{item.userName},#{item.email},#{item.password},#{item.status},#{item.roleId})
		</foreach>
	</insert>

	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.haust_acm.entity.po.User" useGeneratedKeys="true" keyProperty="user_id">
		INSERT INTO user (user_id,user_name,email,password,status,last_login,role_id) VALUES
		<foreach collection="list" item="item" separator="," >
			(#{item.userId},#{item.userName},#{item.email},#{item.password},#{item.status},#{item.lastLogin},#{item.roleId})
		</foreach>
		ON DUPLICATE KEY UPDATE
		user_id = VALUES(user_id),
		user_name = VALUES(user_name),
		email = VALUES(email),
		password = VALUES(password),
		status = VALUES(status),
		last_login = VALUES(last_login),
		role_id = VALUES(role_id)
	</insert>


	<!--根据UserId查询-->
	<select id="selectByUserId" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/> FROM user WHERE user_id = #{userId}
	</select>

	<!--根据UserId删除-->
	<delete id="deleteByUserId">
		DELETE FROM user WHERE user_id = #{userId}
	</delete>

	<!--根据UserId更新-->
	<update id="updateByUserId" parameterType="com.haust_acm.entity.po.User">
		UPDATE user
		<set>
			<if test="bean.userName != null and bean.userName != ''">
				user_name = #{bean.userName}
			</if>
			<if test="bean.email != null and bean.email != ''">
				email = #{bean.email}
			</if>
			<if test="bean.password != null and bean.password != ''">
				password = #{bean.password}
			</if>
			<if test="bean.status != null">
				status = #{bean.status}
			</if>
			<if test="bean.createTime != null">
				create_time = #{bean.createTime}
			</if>
			<if test="bean.lastLogin != null">
				last_login = #{bean.lastLogin}
			</if>
			<if test="bean.roleId != null">
				role_id = #{bean.roleId}
			</if>
		</set>
		WHERE user_id = #{userId}
	</update>

	<!--根据邮箱查询	-->
	<select id="selectByEmail" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/> FROM user WHERE email = #{email}
	</select>


</mapper>
